{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "pretty": true,
        "target": "ES2019",
        "module": "esnext",
        "typeRoots": ["node_modules/@types", "@types"],
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "*": ["@types/*"],
            "@cryptuoso/dayjs": ["libs/dayjs/src/index.ts"],
            "@cryptuoso/logger": ["libs/logger/src/index.ts"],
            "@cryptuoso/errors": ["libs/errors/src/index.ts"],
            "@cryptuoso/helpers": ["libs/helpers/src/index.ts"],
            "@cryptuoso/ccxt-public": ["libs/ccxt-public/src/index.ts"],
            "@cryptuoso/service": ["libs/service/src/index.ts"],
            "@cryptuoso/importer-state": ["libs/importer-state/src/index.ts"],
            "@cryptuoso/postgres": ["libs/postgres/src/index.ts"],
            "@cryptuoso/events": ["libs/events/src/index.ts"],
            "@cryptuoso/importer-events": ["libs/importer-events/src/index.ts"],
            "@cryptuoso/exwatcher-base": ["libs/exwatcher-base/src/index.ts"],
            "@cryptuoso/market": ["libs/market/src/index.ts"],
            "@cryptuoso/exwatcher-events": ["libs/exwatcher-events/src/index.ts"],
            "@cryptuoso/backtester-state": ["libs/backtester-state/src/index.ts"],
            "@cryptuoso/robot-state": ["libs/robot-state/src/index.ts"],
            "@cryptuoso/robot-indicators": ["libs/robot-indicators/src/index.ts"],
            "@cryptuoso/robot-events": ["libs/robot-events/src/index.ts"],
            "@cryptuoso/backtester-events": ["libs/backtester-events/src/index.ts"],
            "@cryptuoso/trade-statistics": ["libs/trade-statistics/src/index.ts"],
            "@cryptuoso/user-state": ["libs/user-state/src/index.ts"],
            "@cryptuoso/mail": ["libs/mail/src/index.ts"],
            "@cryptuoso/stats-calc-events": ["libs/stats-calc-events/src/index.ts"],
            "@cryptuoso/test-helpers": ["libs/test-helpers/src/index.ts"],
            "@cryptuoso/user-signals-state": ["libs/user-signals-state/src/index.ts"],
            "@cryptuoso/user-robots-state": ["libs/user-robots-state/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
